                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF5D70C9" Offset="0.916"/>
                    <GradientStop Color="White" Offset="0.787"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="О ЭУП &quot;ОТИ&quot;" VerticalAlignment="Top" Margin="118,10,0,0" FontWeight="Bold" FontFamily="Times New Roman" FontSize="20" HorizontalAlignment="Left" Width="152"/>

    </Grid>
</Window>
