        <Button Content="Лекции" Margin="0,54,89,0" VerticalAlignment="Top" Height="36" Click="Button_Click" BorderBrush="#FFE03A41" HorizontalAlignment="Right" Width="196">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF5D70C9" Offset="0.916"/>
                    <GradientStop Color="White" Offset="0.787"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Практические работы" HorizontalAlignment="Right" VerticalAlignment="Top" Height="38" Width="196" Click="Button_Click_1" Margin="0,116,89,0" BorderBrush="#FFE03A41">
