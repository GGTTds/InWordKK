            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF5D70C9" Offset="0.916"/>
                    <GradientStop Color="White" Offset="0.787"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Практические работы" HorizontalAlignment="Left" VerticalAlignment="Top" Height="38" Width="196" Click="Button_Click_1" Margin="42,85,0,0" BorderBrush="#FFE03A41">
