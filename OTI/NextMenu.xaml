                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF5D70C9" Offset="0.916"/>
                    <GradientStop Color="White" Offset="0.787"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Click="GS_Click" x:Name="GS" Content="Глосарий" HorizontalAlignment="Right" VerticalAlignment="Top" Height="38" Width="196"  Margin="0,348,89,0" BorderBrush="#FFE03A41">
